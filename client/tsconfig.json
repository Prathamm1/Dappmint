  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/Sidebar.js", "pages/_app.js", "pages/index.js", "components/profile/mintingModal/ProfileImageMinter.tsx", "components/profile/mintingModal/LoadingState.tsx", "components/profile/mintingModal/InitialState.tsx", "components/profile/mintingModal/FinishedState.tsx"],
